@model Web.GestorFinanceiro.App.Models.Despesa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Despesa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DespesaId" />
            <div class="form-group">
                <label asp-for="NomeDespesa" class="control-label"></label>
                <input asp-for="NomeDespesa" class="form-control" />
                <span asp-validation-for="NomeDespesa" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recorrente" /> @Html.DisplayNameFor(model => model.Recorrente)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TipoDespesa" class="control-label"></label>
                <select asp-for="TipoDespesa" class="form-control"></select>
                <span asp-validation-for="TipoDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DespesaData" class="control-label"></label>
                <input asp-for="DespesaData" class="form-control" />
                <span asp-validation-for="DespesaData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDespesa" class="control-label"></label>
                <input asp-for="ValorDespesa" class="form-control" />
                <span asp-validation-for="ValorDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoDespesa" class="control-label"></label>
                <input asp-for="DescricaoDespesa" class="form-control" />
                <span asp-validation-for="DescricaoDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastroAlteracao" class="control-label"></label>
                <input asp-for="DataCadastroAlteracao" class="form-control" />
                <span asp-validation-for="DataCadastroAlteracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operacao" class="control-label"></label>
                <select asp-for="Operacao" class="form-control"></select>
                <span asp-validation-for="Operacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Situacao" class="control-label"></label>
                <input asp-for="Situacao" class="form-control" />
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
