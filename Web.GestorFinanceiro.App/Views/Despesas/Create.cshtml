@model Web.GestorFinanceiro.App.Models.Despesa

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow border-card">
    <div class="card-header">
        <h3>Criar Nova Despesa</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Nome da Despesa</label>
                        <input asp-for="NomeDespesa" class="form-control" />
                        <span asp-validation-for="NomeDespesa" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">Despesa Recorrente?</label>
                            <input class="form-check-input" asp-for="Recorrente" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categoria</label>
                        <select asp-for="TipoDespesa" asp-items="Html.GetEnumSelectList<Web.GestorFinanceiro.App.Models.TipoDespesa>()" class="form-control"></select>
                        <span asp-validation-for="TipoDespesa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Data</label>
                        <input asp-for="DespesaData" class="form-control" />
                        <span asp-validation-for="DespesaData" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Valor</label>
                        <input asp-for="ValorDespesa" class="form-control" />
                        <span asp-validation-for="ValorDespesa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataCadastroAlteracao" class="control-label"></label>
                        <input asp-for="DataCadastroAlteracao" class="form-control" />
                        <span asp-validation-for="DataCadastroAlteracao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Método de Pagamento</label>
                        <select asp-for="Operacao" asp-items="Html.GetEnumSelectList<Web.GestorFinanceiro.App.Models.TipoOperacao>()" class="form-control"></select>
                        @* <select asp-for="Operacao" ></select>*@
                        <span asp-validation-for="Operacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        <select asp-for="Operacao" asp-items="Html.GetEnumSelectList<Web.GestorFinanceiro.App.Models.SituacaoDespesa>()" class="form-control"></select>
                        <span asp-validation-for="Situacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descrição</label>
                        <input asp-for="DescricaoDespesa" class="form-control" />
                        <span asp-validation-for="DescricaoDespesa" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="Lançar Despesa" class="btn btn-danger mt-2"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
